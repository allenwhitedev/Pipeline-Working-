<% provide(:title, @organization.name) %>
<style>h3 {text-align: center;}</style>
<% if current_user.nil? || !current_user.moderator? %>


  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/stats' %>
          </div>
      </section>
    </aside>
    <div class="span8">
      <h3><%= @organization.name %> Members</h3>
      <% if @users.any? %>
      <div class='center-wrapper'>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
        </div>
      <% end %>
    </div>



<% else %>
<!-- Will sort this out once checkin button works -->
<% provide(:title, @organization.name) %>
      <section>
        <%= render 'shared/stats' %>         
      </section>
    <div class="panel panel-default">
    <div class="panel-heading"><h3><%= @organization.name %> Members</h3><style>h3 {text-align: center;}</style></div>
    <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Points</th>      
    </tr>  
    </thead>
    <tbody>
      <% if @users.any? %>
          <%= render @users %>
      <% end %>
    </tbody>
    </table>
    </div>
  <% end %>