<% provide(:title, @title) %>
<div class="container">
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
     
    </section>
    <section>
      <%= render 'shared/stats' %>
      
        </div>
      
    </section>
